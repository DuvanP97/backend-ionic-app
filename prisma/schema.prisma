// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model pizzas {
  id         BigInt  @id @default(autoincrement())
  name       String
  base_price Decimal
  is_active  Boolean @default(true)
}

model ingredients {
  id         BigInt  @id @default(autoincrement())
  name       String
  price      Decimal
  is_active  Boolean @default(true)
}

model drinks {
  id         BigInt  @id @default(autoincrement())
  name       String
  price      Decimal
  is_active  Boolean @default(true)
}

model orders {
  id           BigInt   @id @default(autoincrement())
  user_id      String
  status       String
  subtotal     Decimal
  delivery_fee Decimal
  total        Decimal
  address      String?
  lat          Float?
  lng          Float?
  payment_ref  String?
  created_at   DateTime @default(now())

  order_items  order_items[]
}

model order_items {
  id         BigInt  @id @default(autoincrement())
  order_id   BigInt
  item_type  String
  ref_id     BigInt
  quantity   Int
  unit_price Decimal

  orders     orders  @relation(fields: [order_id], references: [id], onDelete: Cascade)
}